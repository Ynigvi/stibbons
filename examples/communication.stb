agent listener (name) {
	println("Hello, I am " + name)
	message = recv ()
	println ("I am " + name + " and someone told me " + message)
}

new listener ("Denis")
new listener ("Bjarne")
new listener ("Linus")

new agent {
	println(1)
	send-all ("Hello, agents!")
	println(2)
	michel = new listener ("Michel")
	println(3)
	send (michel,"Hello, Michel!")
	println(4)
}

